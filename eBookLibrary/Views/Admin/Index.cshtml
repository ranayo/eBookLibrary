@{ ViewBag.Title = "Admin Dashboard"; }

<h2 class="text-center my-4">Admin Dashboard</h2>

<div class="container">
    <div class="row justify-content-center">
        <!-- Centered Buttons -->
        <div class="col-md-auto d-flex justify-content-center flex-wrap">
            <a href="/Admin/ManageCatalog" class="btn btn-primary btn-lg mx-2 my-2">📚 Manage Book Catalog</a>
            <a href="/Admin/AddBook" class="btn btn-success btn-lg mx-2 my-2">➕ Add New Book</a>
            <a href="/Admin/ManageUsers" class="btn btn-info btn-lg mx-2 my-2">👤 Manage Users</a>
            <a href="/Login/LogOut" class="btn btn-danger btn-lg mx-2 my-2">🔒 Log Out</a>
        </div>
    </div>
</div>

<style>
    /* Style adjustments */
    body {
        background-color: #f8f9fa; /* Light gray background */
    }

    h2 {
        font-family: 'Mulish', sans-serif;
        font-size: 2.5rem;
        font-weight: bold;
        color: #343a40;
    }

    .btn {
        font-size: 1.2rem;
        font-weight: 600;
        padding: 15px 20px;
        border-radius: 10px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #117a8b;
            border-color: #0c5460;
        }

    .container {
        margin-top: 50px;
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        align-items: stretch;
        justify-content: center;
        align-content: center;
    }
    body{
        background-color:beige;
    }
</style>
